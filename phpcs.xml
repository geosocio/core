<?xml version="1.0"?>
<ruleset name="GeoSoc.io Core">
  <description>The coding standard for GeoSoc.io</description>

  <rule ref="PSR2"/>

  <!-- Enforce Type Hints -->
  <rule ref="Squiz.Commenting.FunctionComment.TypeHintMissing" />
  <rule ref="Squiz.Commenting.FunctionComment.ScalarTypeHintMissing" />

  <exclude-pattern>var/cache/</exclude-pattern>
  <exclude-pattern>var/SymfonyRequirements.php</exclude-pattern>
  <exclude-pattern>vendor/</exclude-pattern>
  <exclude-pattern>web/config.php</exclude-pattern>
</ruleset>
